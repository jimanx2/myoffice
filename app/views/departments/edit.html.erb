<h1>Update Department: <%= @department.name %></h1>
<div>
<form action="/departments/<%= @department.id %>/edit" method="post" id="update_form">
    <%= hidden_field_tag "authenticity_token",
        form_authenticity_token %>

    <div class="form-group">
        <label class="col-md-4">NAME</label>
        <div class="col-md-8">
        <input type="text" name="name"
            class="form-control"
            value="<%= @department.name %>"/>
        </div>
    </div>   
    
    <div class="form-group">
        <label class="col-md-4">CODE</label>
        <div class="col-md-8">
        <input type="text" name="code"
            class="form-control"
            value="<%= @department.code %>"/>
        </div>
    </div>
    

    <div class="action">
        <a href="#" class="btn btn-success">Update</a>
        <a href="/departments" class="btn btn-danger">Cancel</a>
    </div>
</form>
</div>

<% content_for :js do %>
<script type="text/javascript">
    $('form .action a.btn-success').click(function(){
        $('#update_form').submit();
    });
</script>
<% end %>