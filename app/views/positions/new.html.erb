<h1>Create New Participant: </h1>
<hr>
<form action="/positions/new" method="post" id="new_form">
    
    <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
    
    <div class="form-group" align="center">
        <label class="col -md-4" >Name</label>
        <div class="col -md-8" >
        <input type="text" name="name"
            class="form-control" />
        </div>
    </div>
    
    <div class="form-group" align="center">
        <label class="col -md-4" >Code Position</label>
        <div class="col -md-8" >
        <input type="text" name="code"
            class="form-control" />
        </div>
    </div>
    <div class="form-group" align="center">
        <label class="col -md-4" >Eligibility Leaves</label>
        <div class="col -md-8" >
        <input type="text" name="eligibilityleave"
            class="form-control" />
        </div>
    </div>
    
    <div class="action" align="center">
        <a href="#" id="btnSubmit" class="btn btn-success">Submit</a>
        <a href="/positions/" class ="btn btn-danger">Cancel</a>
    </div>
    </div>
</div>
</form>
</div>

<% content_for :js do %>
<script type="text/javascript">
    $('#btnSubmit').click(function(){ $('#new_form').submit();
                                        
                                        
                                        
                                                    });
</script>
<% end %>