<h1><center><b>Position List</b></center></h1>

layout 'administrator'

<%= 
message = flash.each.map do |msg| msg[1] end 
raw message.join('<br>')

%>

<span class="pull-right">
    <a class="btn btn-warning"
       href="/positions/new">
        Add New Position
    </a>

</span>


<table class="table table-bordered" border="5" >
<thread>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Code</th>
        <th>Eligibility Leave</th>
        <th>Action</th>
    </tr>
<thread>
<tbody>
    <% @position.each do |position| %>
    <tr>
        <td> <%= position.id %></td>
        <td> <%= position.name %></td>
        <td> <%= position.code %></td>
        <td> <%= position.eligibilityleave %></td>
        <td>
       
            <a class="btn btn-info" href="/positions/<%= position.id %>">
            View Details
            </a>
            <a class="btn btn-success" href="/positions/<%= position.id %>">
            Edit
            </a>
            <%= link_to 'Remove', position,
                method: :delete, 
                class: "btn btn-danger", 
                data: {confirm:'Are You Sure?'}
    %>
            
        </td>
    </tr>
    <% end %>
    
    </tbody>


</table>
