<h1>Create New Claims</h1>
<hr>
<%= form_for '/claims/new', :html => {:multipart => true, :id => 'new_form'} do |f| %>
    <div class="form-group col-md-6 col-md-offset-2">
        <label class="col-md-3">Employee Number</label>
        <div class="col-md-9">
        <input type="text" name="empid" 
               class="form-control"/>
    </div>
    
    <div class="form-group">
        <label class="col-md-3">Claim Type</label>
        <div class="col-md-9">
        <select class="form-control selectpicker" id="user_id" name="claim_type">
            <option value="1">Mileage</option>
            <option value="2">Property</option>
            <option value="3">OverTime</option>
          </select>
        </div>
    </div>        
    
    <div class="form-group">
        <label class="col-md-3">Remark</label>
        <div class="col-md-9">
        <input type="text" name="remark" 
               class="form-control"/>
        </div>
    </div>
    
      
      <div class="form-group">
        <label class="col-md-3">Amount</label>
        <div class="col-md-9">
        <input type="text" name="totalclaim" 
               class="form-control"/>
        </div>
    </div>
      
    <div class="form-group">
        <label class="col-md-3">Approval Status</label>
        <div class="col-md-9">
        <input type="text" name="appstat" 
               class="form-control"/>
        </div>
    </div>
      
    <div class="form-group">
      <%= f.file_field :filename %>
    </div>
      
    <div class="col-md-3"></div>
    <div class="action col-md-9">
        <a href="#" id="btnSubmit" class="btn btn-success">Submit</a>
        <a href="/" class="btn btn-danger">Cancel</a>
    </div>

  </div>
  </br>
  
<% end %>
    
    <% content_for :js do %>
    <script type="text/javascript">
        $('#btnSubmit').click(function(){
            $('#new_form').submit();
        });
    </script>
    


    <% end %>