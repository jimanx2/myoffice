<h1>Update Leavetype: <%= @leavetype.name %></h1>
<hr>
<div class="row">
<form action="/leavetypes/<%= @leavetype.id %>/edit"
      method="post" id="update_form">
    <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
    
    <div class="form-group">
        <label class="col-md-4">Name</label>
        <div class="col-md-8">
        <input type="text" name="name"
            class="form-control"
            value="<%= @leavetype.name %>"/>
    </div>
    
    
    <div class="action">
        <a href="#" class="btn btn-success" id="btn_update">Update</a>
        <a href="/leavetypes" class="btn btn-danger">Cancel</a>
        
    </div>
</form>
</div>
    
<% content_for :js do %>
<script type="text/javascript">
    $('#btn_update').click(function(){
        $('#update_form').submit();
    });
</script>
<% end %>
    
    
  