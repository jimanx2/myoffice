<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to continue to Bootsnipp</h1>
            <p class="alert"><%= alert %></p>
            <p class="notice"><%= notice %></p>
            <div class="account-wall">
                <img class="profile-img" src="http://cdn.breitbart.com/mediaserver/Breitbart/Big-Hollywood/2013/11/03/spongebomb/spongebob.jpg"
                    alt="">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :class => 'form-signin'}) do |f| %>
                <%= f.email_field :email,:class => 'form-control', :placeholder => 'Email' , required: true ,autofocus: true %>
                <%= f.password_field :password,:class => 'form-control', autocomplete: "off" %>
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Sign in</button>
                <label class="checkbox pull-left">
                    <input name="remember_me" type="checkbox">
                    Remember me
                </label>
                <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
              <% end %>
            </div>
            <a href="<%= new_user_registration_path  %>" class="text-center new-account">Create an account </a>
        </div>
    </div>
</div>