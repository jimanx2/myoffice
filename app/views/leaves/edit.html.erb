<h1> Update Leave: <%= @leave.id %></h1>
<hr>
<div class="row">
<form action="/leaves/<%= @leave.id %>/edit" method="post" id="update_form">
    
    <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
  
  <div class="form-group col-md-5 col-md-offset-2">
        <label class="col-md-3">Start Date</label>
        <div class="col-md-9">
        <input type="text" name="startdate" 
               class="form-control" 
               value="<%= @leave.startdate %>"/>
        </div>
  </div>
  
  <div class="form-group col-md-5 col-md-offset-2">
        <label class="col-md-3">End Date</label>
        <div class="col-md-9">
        <input type="text" name="enddate" 
               class="form-control" 
               value="<%= @leave.enddate %>"/>
        </div>
  </div>
  
  <div class="form-group col-md-5 col-md-offset-2">
        <label class="col-md-3">Remark</label>
        <div class="col-md-9">
        <input type="text" name="remark" 
               class="form-control" 
               value="<%= @leave.remark %>"/>
        </div>
  </div>
  
  <div class="form-group col-md-10 col-md-offset-3">
    <div class="action col-md-8">
        <a href="#" id="btnUpdate" class="btn btn-success">UPDATE</a>
        <a href="/leaves" class="btn btn-danger">CANCEL</a>
    </div>
  </div>
</form>
  
  <% content_for :js do %>
    <script type="text/javascript">
        $('#btnUpdate').click(function(){
            $('#update_form').submit();
        });
    </script>
    <% end %>