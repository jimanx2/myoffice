<h1> Leave Application Form </h1>
<hr>
<div class="row">
<form action="/leaves/new" method="post" id="new_form">
  
  <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
    
    <div class="form-group">
        <label class="col-md-2">Employee Name</label>
        <div class="col-md-10">
        <input type="text" name="employee name"
               class="form-control"
        </div>
    </div>
      
    <br>
      
    <div class="form-group">
        <label class="col-md-2">Employee Number</label>
        <div class="col-md-10">
        <input type="text" name="employee number"
               class="form-control"
        </div>
    </div>
      
    <br>
        
    <div class="form-group">
        <label class="col-md-2">Department</label>
        <div class="col-md-10">
        <input type="text" name="department"
               class="form-control"
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2">Leave From</label>
        <div class="col-md-10">
        <input type="date" name="leave from"
               class="form-control"
        </div>
    </div>
        
    <br>
        
        <div class="action" align="center">
          <a href="#" id="btnSubmit" class="btn btn-success">Submit</a>
        
        <a href="#" class="btn btn-danger">Reset</a>
        </div>
</form>
</div>
        
<% content_for :js do %>
<script type="text/javascript">
    $('#btnSubmit').click(function(){
        $('#new_form').submit();
    });
</script>
<%end%>